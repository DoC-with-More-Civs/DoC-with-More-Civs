			.VAlign								=	GFlags(GToolTipCtrl, GFC_CF_TOOLTIP_VCENTER);
			.HAlign								=	GFlags(GToolTipCtrl, GFC_CF_TOOLTIP_LEFT);
			.Wrap								=	GFlags(GToolTipCtrl, GFC_CF_TOOLTIP_WRAP_WORD);
			.Crop								=	GFlags(GToolTipCtrl, GFC_CF_TOOLTIP_CROP_CHAR);
